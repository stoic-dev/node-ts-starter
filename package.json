{
  "name": "ts-node-app-starter",
  "version": "0.1.0",
  "description": "Starter project for a Typescript NodeJS application.",
  "main": "dist/main.js",
  "scripts": {
    "build:dev": "webpack --config config/webpack/webpack.dev.js --progress --profile",
    "build:prod": "webpack --config config/webpack/webpack.prod.js --progress --profile --bail",
    "build": "npm run build:dev",
    "clean:coverage": "npm run rimraf -- coverage",
    "clean:dist": "npm run rimraf -- dist",
    "clean:docs": "npm run rimraf -- docs",
    "clean:install": "npm run rimraf -- node_modules",
    "clean": "npm run clean:coverage && npm run clean:dist && npm run clean:docs && npm run clean:install",
    "coverage": "npm test && nyc report --reporter=lcov",
    "eslint": "eslint",
    "jest": "jest --verbose --config=jest.config.json",
    "lint": "npm run tslint -- \"src/**/*.ts\" && npm run eslint -- \"config/**\"",
    "postinstall": "npm audit && npm run jest",
    "postversion": "git push && git push --tags && npm run clean:dist",
    "preversion": "npm test",
    "rimraf": "rimraf",
    "start": "node dist/main.js",
    "test": "npm run lint && npm audit && npm run jest && open coverage/lcov-report/index.html",
    "tslint": "tslint",
    "version": "npm run build:prod"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/stoic-dev/ts-node-app-starter.git"
  },
  "keywords": [
    "NodeJS",
    "Typescript",
    "starter",
    "template"
  ],
  "author": "John Harris",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/stoic-dev/ts-node-app-starter/issues"
  },
  "homepage": "https://github.com/stoic-dev/ts-node-app-starter#readme",
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/plugin-proposal-class-properties": "^7.8.3",
    "@babel/plugin-proposal-decorators": "^7.8.3",
    "@babel/plugin-transform-runtime": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@types/jest": "^25.2.1",
    "@types/node": "^13.13.5",
    "awesome-typescript-loader": "^5.2.1",
    "babel-loader": "^8.1.0",
    "babel-plugin-parameter-decorator": "^1.0.16",
    "babel-plugin-transform-builtin-extend": "^1.1.2",
    "closure-webpack-plugin": "^2.3.0",
    "eslint": "^6.8.0",
    "generate-json-webpack-plugin": "^1.0.0",
    "google-closure-compiler": "^20200426.0.0",
    "jest": "^26.0.1",
    "open": "^7.0.3",
    "open-cli": "^6.0.1",
    "prettier": "^2.0.5",
    "rimraf": "^3.0.2",
    "source-map-loader": "^0.2.4",
    "ts-jest": "^25.4.0",
    "ts-mockito": "^2.5.0",
    "typescript": "^3.8.3",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.12",
    "webpack-merge": "^4.2.2",
    "webpack-node-externals": "^1.7.2"
  }
}
